<UserControl x:Class="PressureTimerApp.LetterRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 字母标签 -->
            <TextBlock Grid.Column="0" Text="{Binding Letter}" 
                      FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                      Background="#F0F0F0" Margin="0,0,5,0"/>

            <!-- 计时器容器 - 使用 Grid 实现等宽列 -->
            <Grid Grid.Column="1" x:Name="timersGrid">
                <Grid.ColumnDefinitions>
                    <!-- 列定义将在代码中动态生成 -->
                </Grid.ColumnDefinitions>
            </Grid>
        </Grid>
    </Border>
</UserControl>